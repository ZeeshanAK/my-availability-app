{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install"
        // We remove "buildCommand": "npm run build" here
        // as we are directly serving the public folder
      }
    }
  ],
  "routes": [
    {
      "src": "/share",
      "dest": "/public/index.html"
    },
    {
      "src": "/share/(.*)",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ],
  "outputDirectory": "public"
}
